	<key>AdjustToHeightWidth</key>
	<boolean>TRUE</boolean>
</item>
<item>	
	<key>PreventFullWidthAsChildItem</key>
	<boolean>TRUE</boolean>
</item>


<item>
	<key>HTMLCode</key>
	<string><![CDATA[<!--{!-$width-!}--!>
	<audio id="audio{!-SHAPEINDEX-!}" preload="metadata" src="{!-plapMP3UUID-!}" width="100%" height="{!-$Height-!}" {!-pladAutoplay(TRUE)// autoplay//pladAutoplay-!} {!-pladLoop(TRUE)// loop//pladLoop-!} type="audio/mp3" controls="controls"></audio>	
		
	<script>
$('#audio{!-SHAPEINDEX-!}').mediaelementplayer( {
    features: ['playpause','progress','current','duration','tracks','volume','fullscreen'],
    enableKeyboard: true,
    pauseOtherPlayers: true,
    keyActions: []
 
});

vol = {!-pladVolume-!};

switch (vol)
{
case 0:
	$volume = '0.0';
	break;
case 10:
	$volume = '1.0';
	break;
default:
	$volume = '0.' + vol;
	break;
}

audio = document.getElementById('audio{!-SHAPEINDEX-!}');
audio.setVolume($volume);
audio.setMuted({!-pladMute(FALSE)//false//pladMute-!}{!-pladMute(TRUE)//true//pladMute-!});

</script>
	
	]]>
	</string>
</item>

<item>
	<key>Javascript</key>
	<array>
	<string>mediaelement-and-player.min.js</string>
	<string>mediaelement-flash-audio.swf</string>
	</array>
</item>

<item>
